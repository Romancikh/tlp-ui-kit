{
  "compilerOptions": {
    "target": "ES5",
    "module": "CommonJS",
    "lib": ["dom", "es2015"],
    "jsx": "react-jsx",
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "declaration": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "outDir": "dist"
  },
  "include": ["./src/**/*"]
}
